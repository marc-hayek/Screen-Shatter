      "128": "img/logo_128.png",
      "16": "img/logo_16.png",
      "48": "img/logo_48.png"
   },
   "incognito": "spanning",
   "manifest_version": 2,
   "name": "Screen Shatter",
   "version":"0.1",
   "permissions": [ "*://*/*", "tabs","webRequest", "notifications", "storage" ],
