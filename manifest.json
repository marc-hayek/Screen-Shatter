{
   "content_scripts": [ {
      "js": [
         "jquery-2.1.3.min.js", 
         "content.js" 
      ],
      "css": [
        "main.css"
      ],
      "matches": [ "http://*/*", "https://*/*", "file://*/*" ],
      "run_at": "document_end"
   } ],
